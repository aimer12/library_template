  <script type="text/javascript">
  
  function validate_required(field, alertxt)
{
  	with (field)
  	{
  		if (value==null || value=="")
  			{alert(alertxt); return false}
  		else
  			{return true}
  	}
}

function validate_form(thisform)
{
	with (thisform)
	{
		if (validate_required(book_id,"'book_id' null!")==false)
			{book_id.focus();return false}
		if (validate_required(book_title,"'book_title' null!")==false)
			{book_title.focus();return false}
		if (validate_required(addr,"'addr' Null!")==false)
			{addr.focus();return false}
		return true
	}
}
</script>

</head>

<body backcolor=pink>
	<center>
		<h1>update book</h1>
